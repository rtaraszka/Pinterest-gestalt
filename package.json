{
  "private": true,
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "resolutions": {
    "jest": "^23.1.0"
  },
  "dependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-flow-strip-types": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@uxpin/merge-cli": "^1.3.1",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.5.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "benchmark": "^2.1.4",
    "classnames": "^2.2.6",
    "codecov": "^3.0.2",
    "concurrently": "^3.5.1",
    "css-loader": "^2.1.1",
    "danger": "6.1.12",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-eslint-comments": "^3.0.1",
    "eslint-plugin-flowtype": "^3.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.25.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^1.0.1",
    "filesize": "^3.6.1",
    "flow-bin": "0.84.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "1.13.7",
    "react-test-renderer": "^16.8.0",
    "shelljs": "^0.8.2",
    "style-loader": "^0.23.1",
    "stylelint": "^9.6.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^1.0.0",
    "svg-react-loader": "^0.4.6"
  },
  "scripts": {
    "build": "cd packages/gestalt && yarn build",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"packages/**/*.css\"",
    "greenkeeper-lockfile-update": "greenkeeper-lockfile-update",
    "greenkeeper-lockfile-upload": "greenkeeper-lockfile-upload",
    "start": "concurrently \"cd docs && yarn start\" \"cd packages/gestalt && yarn watch\"",
    "test": "./scripts/test.sh",
    "test:integration": "./run_integration_tests",
    "format": "prettier --write \"{.babelrc.json,.eslintrc,**/*.{js,css,md}}\"",
    "precommit": "lint-staged",
    "uxpin:experiment": "uxpin-merge --webpack-config ./webpack.uxpin.config.js"
  },
  "jest": {
    "projects": [
      {
        "displayName": "node",
        "testEnvironment": "node",
        "moduleNameMapper": {
          "\\.(svg)$": "<rootDir>/scripts/fileMock.js",
          "\\.(css)$": "identity-obj-proxy"
        },
        "testPathIgnorePatterns": [
          "jsdom.test.js"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>scripts/setupJest.js"
      },
      {
        "displayName": "jsdom",
        "testEnvironment": "jsdom",
        "moduleNameMapper": {
          "\\.(svg)$": "<rootDir>/scripts/fileMock.js",
          "\\.(css)$": "identity-obj-proxy"
        },
        "setupTestFrameworkScriptFile": "<rootDir>scripts/setupJest.js"
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "jest --findRelatedTests"
    ],
    "*.css": [
      "stylelint"
    ]
  }
}
